{% extends 'base.html.twig' %}

{% block title %}Tournois - {{ tournament.name }} {% endblock %}

{% block body %}
    <h1>Tournament</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tournament.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tournament.name }}</td>
            </tr>
            <tr>
                <th>ChallongeId</th>
                <td><a target="_blank" href="https://challonge.com/fr/{{ tournament.challongeId }}">{{ tournament.challongeId }}</a></td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ tournament.date ? tournament.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>ExtraData</th>
                <td>{{ tournament.extraData ? tournament.extraData|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_tournament_index') }}">back to list</a>

    <a href="{{ path('app_tournament_edit', {'id': tournament.id}) }}">edit</a>

    {% include 'tournament/_delete_form.html.twig' with {"id":tournament.id} %}

    {% if tournament.challongeId %}
    <iframe src="https://challonge.com/fr/{{ tournament.challongeId }}/module" width="100%" height="500" frameborder="0" scrolling="auto" allowtransparency="true"></iframe>
    {% endif %}
{% endblock %}
