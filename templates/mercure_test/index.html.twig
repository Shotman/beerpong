        // Will be called every time an update is published by the server
            let data = JSON.parse(event.data).data;
            Push.create(data, {
                body: 'This is a web notification! at ' + Date.now().toLocaleString("fr"),
                timeout: 5000,
                vibrate: [100,200,100,200],
                onClick: function () {
                    window.focus();
                    this.close();
                },
            })
